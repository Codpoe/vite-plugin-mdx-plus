{
  "name": "vite-plugin-mdx-plus",
  "version": "0.1.0",
  "description": "A vite plugin to use mdx with more opinionated features. It's plus!",
  "keywords": [
    "vite-plugin",
    "mdx"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Codpoe/vite-plugin-mdx-plus.git"
  },
  "author": "Codpoe <codpoe.me@gmail.com>",
  "license": "MIT",
  "type": "module",
  "files": [
    "dist"
  ],
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": "./dist/index.js"
  },
  "scripts": {
    "prepare": "husky install",
    "dev": "rimraf dist && tsc -w",
    "build": "rimraf dist && tsc",
    "lint": "eslint --ext .js,.jsx,.ts,.tsx src",
    "release": "release-it"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": "eslint --fix"
  },
  "release-it": {
    "git": {
      "commitMessage": "chore: release v${version}"
    },
    "hooks": {
      "before:init": ["pnpm run lint"],
      "after:bump": "pnpm run build"
    }
  },
  "devDependencies": {
    "@codpoe/eslint-config": "^0.1.3",
    "@release-it/conventional-changelog": "^5.0.0",
    "@types/fs-extra": "^9.0.13",
    "@types/github-slugger": "^1.3.0",
    "@types/mdast": "^3.0.10",
    "@types/node": "^18.0.3",
    "eslint": "^8.19.0",
    "husky": "^8.0.1",
    "lint-staged": "^13.0.3",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.7.1",
    "release-it": "^15.1.2",
    "rimraf": "^3.0.2",
    "rollup": "^2.79.1",
    "typescript": "^4.7.4",
    "vite": "^3.2.4"
  },
  "dependencies": {
    "@mdx-js/rollup": "^2.1.5",
    "@rollup/pluginutils": "^4.2.1",
    "acorn": "^8.8.0",
    "acorn-jsx": "^5.3.2",
    "defu": "^6.1.0",
    "fs-extra": "^10.1.0",
    "github-slugger": "^1.4.0",
    "gray-matter": "^4.0.3",
    "hast-util-from-html": "^1.0.0",
    "mdast-util-mdx-jsx": "^2.1.0",
    "mdast-util-mdxjs-esm": "^1.3.0",
    "mdast-util-to-string": "^3.1.0",
    "rehype-autolink-headings": "^6.1.1",
    "rehype-slug": "^5.0.1",
    "remark-directive": "^2.0.1",
    "remark-frontmatter": "^4.0.1",
    "remark-gfm": "^3.0.1",
    "remark-mdx-frontmatter": "^2.0.3",
    "shiki": "^0.11.1",
    "unified": "^10.1.2",
    "unist-util-visit": "^4.1.1",
    "unist-util-visit-children": "^2.0.0",
    "upath": "^2.0.1"
  }
}
